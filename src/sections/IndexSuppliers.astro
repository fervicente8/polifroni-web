---
import LogoPolifroni from "../assets/logos/logo-polifroni.webp";
import LogoPavir from "../assets/logos/logo-pavir.webp";
---

<section class='mb-14'>
  <h1 class='text-center text-gray-600 text-[1.5rem] font-bold mb-7'>
    Nuestros proveedores
  </h1>
  <div
    class='suppliers-container flex justify-center items-center gap-4 sm:gap-14 flex-wrap'
  >
    <img src={LogoPolifroni.src} alt='Logo 1' class='supplier-image' />
    <a href='https://pavir.com.ar/' target='_blank'>
      <img
        src={LogoPavir.src}
        alt='Logo 3'
        class='supplier-image border border-black'
      />
    </a>
  </div>
</section>

<style>
  .suppliersContainer {
    opacity: 0;
  }

  .supplier-image {
    cursor: pointer;
    border-radius: 10px;
    transition: all 0.5s ease-in-out;
    width: 130px;
    filter: grayscale(100%);
    opacity: 0.8;
  }

  .supplier-image:hover {
    filter: grayscale(0);
    opacity: 1;
  }

  @keyframes animate-fade-in-down {
    0% {
      opacity: 0;
      transform: translateY(-20px);
    }
    100% {
      opacity: 0.8;
      transform: translateY(0);
    }
  }
</style>

<script>
  const suppliersContainer = document.querySelector(".suppliers-container");

  const suppliersObserver = new IntersectionObserver((entries, observer) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        suppliersContainer.classList.add("animate-fade-in-down");

        observer.unobserve(suppliersContainer);
      }
    });
  });

  suppliersObserver.observe(suppliersContainer);
</script>
