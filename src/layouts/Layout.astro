---
import Header from "../sections/Header.astro";
import Footer from "../sections/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Sitio web de Polifroni Puertas, somos una empresa dedicada a la fabricaciÃ³n y venta de aberturas en la ciudad de Tandil.'
    />
    <meta name='copyright' content='Polifroni Puertas' />
    <meta name='author' content='Fermin Vicente' />
    <meta name='audience' content='all' />
    <meta
      name='keywords'
      content='aberturas, polifroni, puertas, ventanas, tandil'
    />
    <meta name='robots' content='index, all, follow' />
    <meta
      name='viewport'
      content='width=device, initial-scale=1, maximum-scale=1'
    />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link
      href='https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
    <meta property='og:title' content={title} />
    <meta property='og:type' content='website' />
    <meta property='og:url' content='https://polifroni.com.ar' />
    <meta property='og:image' content='https://polifroni.com.ar/favicon.svg' />
    <meta property='og:description' content='Sitio web de Polifroni Puertas' />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html {
    font-family: "Lato", sans-serif;
    background: white;
  }

  img[loading="lazy"] {
    background-color: white;
  }
</style>
